mixin listPosts(author, posts)
  ul(class="posts list-items")
    li(class="upload_rel new_post", id='/post/author/' + author.ID) Create Article... 
    if posts
      each art in posts
        li(id='post/' + art.ID + '/author/' + author.ID) #{art.post_title}

block content

  <h3 class="list-title">#{author.display_name}</h3>
  +listPosts(author, posts)
