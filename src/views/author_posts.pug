mixin listPosts(author, posts)
  ul(class="list-items posts")
    li(class="add-card", id='authors/' + author.ID + '/posts') Add an Article... 
    if posts
      each art in posts
        li(id='authors/' + author.ID + '/posts/' + art.ID) #{art.post_title}

  
block content

  script.
    $(function(){
      $('.add-card').click(function(e) {
        $('#new_author_post').show();
      });
      $('.select_link').click(function(e) {
        e.preventDefault();
        let butn = $(this)
        console.log('aid', butn.attr("id"));
        $('#author_posts').show().load('http://localhost:3001/' + butn.attr("id"));
      });
    });

  <h3 class="list-title">#{author.display_name}</h3>
  +listPosts(author, posts)
  <div class="aoth" id="new_author_post" style="display: none;">
    form(action="#{trgtprop}" class="dropzone" id="my-awesome-dropzone")
  </div>


